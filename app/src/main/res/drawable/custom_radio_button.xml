<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние выбранного варианта -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Зеленый цвет для выбранного ответа -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#388E3C" />
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>
    <!-- Состояние невыбранного варианта -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Белый фон -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#B0BEC5" />
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>
